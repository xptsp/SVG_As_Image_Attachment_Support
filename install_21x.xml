function expandSVG(thumbID)
{
	var img = document.getElementById('thumb_' + thumbID);
	var link = document.getElementById('link_' + thumbID);
	var tmp = img.src;
	img.src = link.href;
	link.href = tmp;
	img.classList.toggle('thumb_' + thumbID);
	return false;
}]]></add>
